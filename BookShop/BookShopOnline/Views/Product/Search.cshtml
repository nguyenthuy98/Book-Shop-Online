@model List<Model.ViewModel.ProductViewModel>
@{
    ViewBag.Title = "Kết quả tìm kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h4>Hiển thị kết quả tìm kiếm của từ khoá: <i>"@ViewBag.Keyword"</i></h4>
        </div>
    </div>
    <div class="section group">
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="single-product">
                        <div class="single-product-img">
                            <a href="/Product/Detail/@item.MaSach">
                                <img class="primary-img" src="~/assets/images/@item.HinhAnh" alt="product">
                            </a>
                            <div class="single-product-action">
                                <a href="/Product/Detail/@item.MaSach"><i class="fas fa-eye"></i></a>
                                <a href="/them-gio-hang?productId=@item.MaSach&quantity=1"><i class="fa fa-shopping-cart"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="clear"></div>
        }
        else
        {
            <span>Không tìm thấy dữ liệu phù hợp với từ khóa trên!</span>
        }
    </div>
</div>
