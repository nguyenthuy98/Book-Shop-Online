@model Model.EF.DonHang
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using BookShopOnline.Common;
@{
    var session = (UserLogin)Session[CommonConstants.USER_SESSION];
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        .hide {
            display: none;
        }
        .btn-success{
           margin-top: 93px;
        }
        .imag::after hover{
            border: 1px solid gray;
            background-color:lightgray;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row detail-acc-area" style="height:600px; padding:30px">
            <div class="col-md-3 col-lg-3" style="height:100%">
                <div style="background-color: white;padding: 4px;height: 100%;">
                    <div style="padding-top:20px">
                        <img src="~/assets/images/@session.Image" style="width:50px; border-radius:50%" />
                        <span style="font-size:20px">@session.Name</span>
                    </div>
                    <ul style="padding-top:30px">
                        <li><i class="fas fa-user-circle" style="font-size: 22px !important; color: brown !important; margin-right:10px"></i><a href="/Users/Detail/@session.UserID"> Tài khoản của tôi</a></li>
                        <li><i class="fas fa-clipboard-list" style="font-size: 22px !important; color: cadetblue !important; margin-right:15px;color: brown !important"></i><a href="/Order/GetOrder/@session.UserID"> Đơn hàng của tôi</a></li>
                        <li><i class="fas fa-sign-out-alt" style="font-size: 22px !important; color: orangered !important; margin-right:10px"></i> @Html.ActionLink("Đăng xuất", "Logout", "Users", null)</li>
                    </ul>
                </div>
            </div>
            <div class="cart-area col-md-9 col-lg-9" style="background-color: white; padding: 0px 10px; height:100%">
                @using (Html.BeginForm("Edit", "Order", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaDH)
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control hide" } })
                                @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group" style="margin-bottom: 5px!important; margin-left: 65px !important;">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <img src="~/assets/images/giao.png" width="200" class="imag">
                                </div>
                                <div class="col-md-6">
                                    <img src="~/assets/images/nhanhang.png" width="200" class="imag">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">                                
                                <div class="col-md-6" style="padding-left: 132px;">
                                    @Html.RadioButtonFor(model => model.TrangThai, "2", new { Checked = "checked" }) <span style="margin-right:10px">Đang vận chuyển</span>
                                </div>
                                <div class="col-md-6" style="padding-left: 120px;">
                                    @Html.RadioButtonFor(model => model.TrangThai, "3") <span style="margin-right:10px">Đã nhận hàng</span>
                                </div>
                                @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">  
                            <input type="submit" value="Xác nhận đã nhận hàng" class="btn btn-primary" width="130" style="margin-top: 95px; margin-left: 50px;"/>                         
                            <span style="width:130px;">
                                @Html.ActionLink("Quay lại", "Index", null, htmlAttributes: new { @class = "btn btn-success" })
                            </span>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MaTK, new { htmlAttributes = new { @class = "form-control hide" } })
                                @Html.ValidationMessageFor(model => model.MaTK, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NguoiDat, new { htmlAttributes = new { @class = "form-control hide" } })
                                @Html.ValidationMessageFor(model => model.NguoiDat, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NguoiNhan, new { htmlAttributes = new { @class = "form-control hide" } })
                                @Html.ValidationMessageFor(model => model.NguoiNhan, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NgayDatHang, new { htmlAttributes = new { @class = "form-control hide" } })
                                @Html.ValidationMessageFor(model => model.NgayDatHang, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DiaChiNguoiNhan, new { htmlAttributes = new { @class = "form-control hide" } })
                                @Html.ValidationMessageFor(model => model.DiaChiNguoiNhan, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SDTNguoiNhan, new { htmlAttributes = new { @class = "form-control hide" } })
                                @Html.ValidationMessageFor(model => model.SDTNguoiNhan, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                }       
            </div>
        </div>
    </div>
</body>
</html>
