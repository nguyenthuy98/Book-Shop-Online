@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = (List<Model.EF.Slide>)ViewBag.Slides;
    var listNewProducts = (List<Model.EF.Sach>)ViewBag.NewProducts;
    var listHotProducts = (List<Model.EF.Sach>)ViewBag.HotProducts;
    var listOldProducts = (List<Model.EF.Sach>)ViewBag.OldProducts;
    var listBussinessProducts = (List<Model.EF.Sach>)ViewBag.BussinessProducts;
}
@Styles.Render("~/assets/library/css/style.css")

<div class="wrapper">

    <!-- Slide -->
    <div class="slider-area">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-3">
                    <div class="slider-left" style="margin-top:0px">
                        @{Html.RenderAction("ProductCategory", "Product");}
                    </div>
                </div>
                <div class="col-md-9 col-sm-9">
                    <!-- Main Slider -->
                    <div class="main-slider">
                        <div class="slider">

                            <div id="mainSlider" class="nivoSlider slider-image">
                                @foreach (var item in slides)
                                {
                                    <img src="~/assets/images/@item.HinhAnh" alt="main slider" title="@item.TitleID" />
                                }
                            </div>

                            <div id="htmlcaption1" class="nivo-html-caption slider-caption-1">
                                <div class="slider-progress"></div>
                                <div class="slide-text">
                                    <div class="middle-text">
                                        <div class="cap-title wow slideInRight" data-wow-duration=".9s" data-wow-delay="0s">
                                            <h2>Holiday Season Sale</h2>
                                        </div>
                                        <div class="cap-dec wow slideInRight" data-wow-duration="1.1s" data-wow-delay="0s">
                                            <p>Sale Up To</p>
                                            <h1>37% Off For All Books</h1>
                                        </div>
                                        <div class="cap-readmore animated bounceIn" data-wow-duration="1.5s" data-wow-delay=".5s">
                                            <a href="#">Xem chi tiết >></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="htmlcaption2" class="nivo-html-caption slider-caption-2">
                                <div class="slider-progress"></div>
                                <div class="slide-text">
                                    <div class="middle-text">
                                        <div class="cap-title wow slideInRight" data-wow-duration=".9s" data-wow-delay="0s">
                                            <h2>HOT: NEW COLLECTION !!!</h2>
                                        </div>
                                        <div class="cap-dec wow slideInRight" data-wow-duration="1.1s" data-wow-delay="0s">
                                            <h1>Hogwarts Library</h1>
                                        </div>
                                        <div class="cap-readmore animated bounceIn" data-wow-duration="1.5s" data-wow-delay=".5s">
                                            <a href="#">Mua ngay >></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="slide-image slide2-image">
                                    <img class="wow slideInUp" data-wow-duration="1.5s" data-wow-delay="0s" src="~/assets/images/hrrli.png" alt="slider caption" />
                                </div>
                            </div>
                            <div id="htmlcaption3" class="nivo-html-caption slider-caption-1">
                                <div class="slider-progress"></div>
                                <div class="slide-text">
                                    <div class="middle-text">
                                        <div class="cap-dec wow slideInRight" data-wow-duration="1.1s" data-wow-delay="0s">
                                            <h1>Discover your next book</h1>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--end slide-->
    <!--support-->

    <div class="support-area">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-support">
                        <div class="sigle-support-icon">
                            <p><i class="fas fa-shipping-fast"></i></p>
                        </div>
                        <div class="sigle-support-content">
                            <h2>Miễn phí vận chuyển</h2>
                            <p>Đối với đơn hàng đạt giá trị tối thiểu</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-support">
                        <div class="sigle-support-icon">
                            <p><i class="fas fa-poll-h"></i></p>
                        </div>
                        <div class="sigle-support-content">
                            <h2>Hỗ trợ bọc plastic</h2>
                            <p>Miễn phí bọc plastic với khách hàng thân thiết</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-support">
                        <div class="sigle-support-icon">
                            <p><i class="fas fa-signal"></i></p>
                        </div>
                        <div class="sigle-support-content">
                            <h2>24/7 Support</h2>
                            <p>Tư vấn trực tuyến 24/7</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 hidden-sm col-xs-12">
                    <div class="single-support">
                        <div class="sigle-support-icon">
                            <p><i class="fas fa-user-shield"></i></p>
                        </div>
                        <div class="sigle-support-content">
                            <h2>Mua sắm an toàn</h2>
                            <p>Chúng tôi bảo vệ bạn</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--end support-->
    <!-- Product -->

    <div class="product-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="product-items-area">
                        <div class="product-items">
                            <h2 class="product-header">Tư duy - kỹ năng sống</h2>
                            <div class="row">
                                <div id="product-slider" class="owl-carousel">
                                    @foreach (var item in listHotProducts)
                                    {
                                        <div>
                                            <div class="single-product">
                                                <div class="single-product-img">
                                                    <a href="/Product/Detail/@item.MaSach">
                                                        <img class="primary-img" src="~/assets/images/@item.HinhAnh" alt="product">
                                                    </a>
                                                    <div class="single-product-action">
                                                        <a href="/Product/Detail/@item.MaSach"><i class="fas fa-eye"></i></a>
                                                        <a href="/them-gio-hang?productId=@item.MaSach&quantity=1"><i class="fa fa-shopping-cart"></i></a>
                                                    </div>
                                                </div>
                                                <div class="single-product-content">
                                                    <div class="product-content">
                                                        <h2><a href="/Product/Detail/@item.MaSach">@item.TenSach</a></h2>
                                                        <p>Giá bán : @item.GiaBan VNĐ</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="product-items">
                            <h2 class="product-header">Truyện ngắn - Tản văn</h2>
                            <div class="row">
                                <div id="product-slider-two" class="owl-carousel">
                                    @foreach (var item in listNewProducts)
                                    {
                                        <div>
                                            <div class="single-product">
                                                <div class="single-product-img">
                                                    <a href="/Product/Detail/@item.MaSach">
                                                        <img class="primary-img" src="~/assets/images/@item.HinhAnh" alt="product">
                                                    </a>
                                                    <div class="single-product-action">
                                                        <a href="/Product/Detail/@item.MaSach"><i class="fas fa-eye"></i></a>
                                                        <a href="/them-gio-hang?productId=@item.MaSach&quantity=1"><i class="fa fa-shopping-cart"></i></a>
                                                    </div>
                                                </div>
                                                <div class="single-product-content">
                                                    <div class="product-content">
                                                        <h2><a href="/Product/Detail/@item.MaSach">@item.TenSach</a></h2>
                                                        <p>Giá bán : @item.GiaBan VNĐ</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="container sendtoemail">
                            <div class="row">
                                <div class="col-md-4">
                                    <h4><i class="far fa-envelope"></i> ĐĂNG KÝ NHẬN BẢN TIN</h4>
                                </div>
                                <div class="col-md-8">
                                    <form class="form-inline my-2 my-lg-0">
                                        <input class="form-control mr-sm-2" type="search" placeholder="Nhập địa chỉ email của bạn" aria-label="Search">
                                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Đăng ký</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="product-items">
                            <h2 class="product-header">Tác phẩm kinh điển</h2>
                            <div class="row">
                                <div id="product-slider-women" class="owl-carousel">
                                    @foreach (var item in listOldProducts)
                                    {
                                        <div>
                                            <div class="single-product">
                                                <div class="single-product-img">
                                                    <a href="/Product/Detail/@item.MaSach">
                                                        <img class="primary-img" src="~/assets/images/@item.HinhAnh" alt="product">
                                                    </a>
                                                    <div class="single-product-action">
                                                        <a href="/Product/Detail/@item.MaSach"><i class="fas fa-eye"></i></a>
                                                        <a href="/them-gio-hang?productId=@item.MaSach&quantity=1"><i class="fa fa-shopping-cart"></i></a>
                                                    </div>
                                                </div>
                                                <div class="single-product-content">
                                                    <div class="product-content">
                                                        <h2><a href="/Product/Detail/@item.MaSach">@item.TenSach</a></h2>
                                                        <p>Giá bán : @item.GiaBan VNĐ</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="product-items">
                            <h2 class="product-header">Tủ sách doanh nhân</h2>
                            <div class="row">
                                <div id="product-slider-kids" class="owl-carousel">
                                    @foreach (var item in listBussinessProducts)
                                    {
                                        <div>
                                            <div class="single-product">
                                                <div class="single-product-img">
                                                    <a href="/Product/Detail/@item.MaSach">
                                                        <img class="primary-img" src="~/assets/images/@item.HinhAnh" alt="product">
                                                    </a>
                                                    <div class="single-product-action">
                                                        <a href="/Product/Detail/@item.MaSach"><i class="fas fa-eye"></i></a>
                                                        <a href="/them-gio-hang?productId=@item.MaSach&quantity=1"><i class="fa fa-shopping-cart"></i></a>
                                                    </div>
                                                </div>
                                                <div class="single-product-content">
                                                    <div class="product-content">
                                                        <h2><a href="/Product/Detail/@item.MaSach">@item.TenSach</a></h2>
                                                        <p>Giá bán : @item.GiaBan VNĐ</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end product-->
</div>