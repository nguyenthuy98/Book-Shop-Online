@model Model.EF.Sach
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/assets/library/css/sweetalert.min.css" />

@section jsFooter{
    <script src="~/assets/library/js/sweetalert.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.btnSelectImage').on('click', function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $('#img').attr("src", url);
                    var imgUrl = url.slice(22);
                    $('.txtImageUpload').val(imgUrl);
                };
                finder.popup();
            })
            $('.date-picker').datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'yy-mm-dd'
            });
        });
    </script>
    <script src="~/assets/library/js/jquery-3.4.1.min.js"></script>
    <script src="~/assets/library/js/jquery-ui.js"></script>
}
<style>
    .txtImageUpload {
        display: none;
    }
</style>

<!--brekcumb-->

<nav aria-label="breadcrumb">
    <ol class="breadcrumb" style="margin-top: 0px !important">
        <li class="breadcrumb-item"><a href="/Admin/Home/Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/Admin/Product/Index">Quản lý sản phẩm</a></li>
        <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Nhập thông tin sản phẩm
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">

                        @using (Html.BeginForm("Create", "Product", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MaTG, htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.MaTG, null, "Choose an option", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MaTG, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MaNXB, htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.MaNXB, null, "Choose an option", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MaNXB, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MaDM, htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.MaDM, null, "Choose an option", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MaKM, htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.MaKM, null, "Choose an option", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MaKM, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.TenSach, htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.NgayPhatHanh, htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.EditorFor(model => model.NgayPhatHanh, new { htmlAttributes = new { @class = "form-control date-picker" } })
                                            @Html.ValidationMessageFor(model => model.NgayPhatHanh, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-4" })
                                        <div class="col-md-8">
                                            @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6" style="padding-left: 100px">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <img id="img" src="~/assets/images/placeholder.png" style="width:90%; margin-bottom:20px" />
                                            @Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control txtImageUpload" } })
                                            <br />
                                            <a href="#" class="btn btn-info btnSelectImage" style="margin-top:10px">Chọn ảnh</a>
                                            @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.GiaBan, htmlAttributes: new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SoLuong, htmlAttributes: new { @class = "control-label col-md-3" })
                                        <div class="col-md-9">
                                            @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        <input type="submit" value="+ Thêm mới" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Quay lại", "Index", null, htmlAttributes: new { @class = "btn btn-success" })
</div>
