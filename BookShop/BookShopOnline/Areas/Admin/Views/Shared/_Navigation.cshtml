<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .navbar-default {
            background-color: darkcyan;
        }

        a {
            color: black;
        }

        .nav {
            padding-top: 0px !important;
        }
    </style>
</head>
@using BookShopOnline.Common;
<body>
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0px">
        <img src="~/assets/images/logo2.png" style="width: 190px" />
        <ul class="nav navbar-top-links navbar-right" style="padding-top: 0px">
            <li class="nav-item dropdown no-arrow mx-1">
                <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-bell fa-fw"></i>
                    <span class="badge badge-danger badge-counter">3+</span>
                </a>
            </li>           
            @{
                var session = (UserLogin)Session[CommonConstants.USER_SESSION];
            }
            @if (session != null)
            {
                <li class="dropdown" style="margin-right:0px">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <img src="~/assets/images/@session.Image" style="width: 18px;margin-right: 7px;border-radius: 50%;" /><span>@session.UserName</span>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="/Admin/User/Index"><i class="fa fa-user fa-fw"></i>Thông tin tài khoản</a>
                        </li>
                        <li>
                            <a href="/Admin/Login/Index"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
                        </li>
                    </ul>
                </li>
            }
            else
            {
                <li>
                    <a href="/Admin/Login/Index">| Đăng nhập</a>
                </li>
            }
        </ul>

        <!-- vùng menu dọc -->
        <div class="navbar-default sidebar" role="navigation" style="margin-top:1px">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="/Admin/Home/Index"><i class="fas fa-columns"></i> Trang chủ</a>
                    </li>
                    <li>
                        <a href="#"><i class="fas fa-cogs"></i> Quản lý sản phẩm<span class="fas fa-sort-down"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="/Admin/Product/Index"><i class="fas fa-book"></i> Sách</a>
                            </li>
                            <li>
                                <a href="/Admin/Author/Index"><i class="fas fa-user-tie"></i> Tác giả</a>
                            </li>
                            <li>
                                <a href="/Admin/Publisher/Index"><i class="fas fa-archway"></i> Nhà xuất bản</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Admin/Category/Index"><i class="fas fa-cogs"></i> Quản lý danh mục</a>
                    </li>
                    <li>
                        <a href="/Admin/News/Index"><i class="fas fa-cogs"></i> Quản lý tin tức</a>
                    </li>
                    <li>
                        <a href="/Admin/Promotion/Index"><i class="fas fa-cogs"></i> Quản lý khuyến mại</a>
                    </li>
                    <li>
                        <a href="/Admin/Order/Index"><i class="fas fa-cogs"></i> Quản lý đơn hàng</a>
                    </li>
                    <li>
                        <a href="#"><i class="fas fa-cogs"></i> Quản lý tài khoản<span class="fas fa-sort-down"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="/Admin/UserGroup/Index"><i class="fas fa-users"></i> Nhóm tài khoản</a>
                            </li>
                            <li>
                                <a href="/Admin/User/Index"><i class="fas fa-user"></i> Tài khoản</a>
                            </li>

                        </ul>

                    </li>
                    <li>
                        <a href="/Admin/Slide/Index"><i class="fas fa-cogs"></i> Quản lý slide</a>
                    </li>
                    <li>
                        <a href="/Admin/Feedback/Index"><i class="fas fa-cogs"></i> Quản lý đánh giá</a>
                    </li>
                </ul>
            </div>

        </div>

    </nav>
</body>
</html>