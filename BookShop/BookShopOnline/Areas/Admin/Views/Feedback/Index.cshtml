@model PagedList.IPagedList<Model.EF.DanhGia>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    
}
<link href="~/assets/library/css/font-awesome.min.css" rel="stylesheet" />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb" style="margin-top: 0px !important">
        <li class="breadcrumb-item"><a href="/Admin/Home/Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/Admin/Author/Index">Quản lý đánh giá</a></li>
    </ol>
</nav>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách đánh giá
            </div>
            <div class="panel-body">                
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr style="font-size:14px; background-color:burlywood">
                                <th>#</th>
                                <th>Tên tài khoản đánh giá</th>
                                <th>Ngày đánh giá</th>
                                <th>Nội dung đánh giá</th>                               
                                @*<th colspan="2">Tùy chỉnh</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.MaDanhGia">
                                    <td>@item.MaDanhGia</td>
                                    <td>@item.TenTK</td>
                                    <td>@Html.DisplayFor(modelItem => item.NgayDanhGia)</td>
                                    <td>@item.NoiDung</td>                                    
                                    @*<td>
                                        <a class="btn btn-danger" onclick="ConfirmDelete(@item.MaSlide)"><i class="fas fa-trash"></i></a>
                                    </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>

